# Normalize text files to LF in the repo
* text=auto eol=lf

# Keep CRLF for Windows-specific scripts (if any appear later)
*.bat     text eol=crlf
*.cmd     text eol=crlf
*.ps1     text eol=crlf

# Keep LF for Unix-y scripts
*.sh      text eol=lf
*.bash    text eol=lf
*.zsh     text eol=lf

# Common text
*.py      text eol=lf
*.toml    text eol=lf
*.ini     text eol=lf
*.cfg     text eol=lf
*.json    text eol=lf
*.jsonc   text eol=lf
*.yml     text eol=lf
*.yaml    text eol=lf
*.md      text eol=lf
*.txt     text eol=lf
*.csv     text eol=lf
*.tsv     text eol=lf
*.sql     text eol=lf

# Binary (no eol/diff)
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.webp    binary
*.ico     binary
*.pdf     binary
*.zip     binary
*.gz      binary
*.tar     binary
*.bz2     binary
*.xz      binary
*.7z      binary
*.mp3     binary
*.wav     binary
*.mp4     binary
*.mov     binary
*.avi     binary
*.pcap    binary

# (extend later as needed)